@page
@model Frontend.Pages.Bitacora.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Bitacora</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bitacora.criticidad" class="control-label"></label>
                <input asp-for="Bitacora.criticidad" class="form-control" />
                <span asp-validation-for="Bitacora.criticidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bitacora.descripcion" class="control-label"></label>
                <input asp-for="Bitacora.descripcion" class="form-control" />
                <span asp-validation-for="Bitacora.descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bitacora.fecha" class="control-label"></label>
                <input asp-for="Bitacora.fecha" class="form-control" />
                <span asp-validation-for="Bitacora.fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bitacora.funcionalidad" class="control-label"></label>
                <input asp-for="Bitacora.funcionalidad" class="form-control" />
                <span asp-validation-for="Bitacora.funcionalidad" class="text-danger"></span>
            </div>
