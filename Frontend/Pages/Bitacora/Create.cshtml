                <div class="checkbox">
                    <label>
                        <input asp-for="Bitacora.isAltaUsuario" /> @Html.DisplayNameFor(model => model.Bitacora.isAltaUsuario)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
