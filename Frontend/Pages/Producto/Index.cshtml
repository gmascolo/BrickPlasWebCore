@page
@model Frontend.Pages.Producto.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Producto[0].Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto[0].Tamaño)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto[0].Detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto[0].Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto[0].Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto[0].Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Producto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tamaño)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdProducto">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdProducto">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdProducto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
